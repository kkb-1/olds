FROM --platform=$BUILDPLATFORM golang:1.23-alpine AS builder

LABEL maintainer="kkb"

WORKDIR /src

RUN sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/g' /etc/apk/repositories
RUN apk add --no-cache g++

COPY ../go.mod .

COPY ../go.sum .

ENV GOPROXY="https://goproxy.cn"

RUN go mod download

COPY ../ .

ARG TARGETOS
ARG TARGETARCH

RUN go build -o rpc_server ./apps/user-manage/rpc/usermanage.go

FROM alpine:latest

RUN sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/g' /etc/apk/repositories
RUN apk add --no-cache tzdata

WORKDIR /app

#ENV CEPHALON_DB_HOST=180.168.18.80
#ENV CEPHALON_DB_PASSWORD=StarkSim123456.
#ENV CEPHALON_REDIS_HOST=180.168.36.48
#ENV CEPHALON_REDIS_PASSWORD=StarkSim123456.


COPY --from=builder /src/apps/user/rpc/etc /app/
COPY --from=builder /src/rpc_server /app/

EXPOSE 8081

ENTRYPOINT ["./rpc_server"]